{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react"],
    "env": {
        "browser": true,
        "amd": true,
        "es6": true,
        "node": true,
        "mocha": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "globals": {
        "GA": true,
        "API_URL": true,
        "TRANSLOADIT_AUTH_KEY": true,
        "shallow": true,
        "render": true,
        "mount": true
    },
    "rules": {
        "react/prop-types": 0,
        "no-undef": 1,
        "no-unused-vars": 1,
        "no-extra-semi": 1,
        "no-console": 1,
        "curly": 0,
        "keyword-spacing": [2, {}],
        "space-before-blocks": [2, "always"],
        "wrap-iife": 2,
        "one-var": 0,
        "vars-on-top": 0,
        "no-empty": [2, { "allowEmptyCatch": true }],
        "array-bracket-spacing": 0,
        "space-in-parens": [2, "never"],
        "no-underscore-dangle": 0,
        "comma-style": [2, "last"],
        "space-unary-ops": [2, { "words": false, "nonwords": false }],
        "space-infix-ops": 2,
        "no-with": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "comma-dangle": [2, "never"],
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "eol-last": 2,
        "dot-notation": 2,
        "no-multi-str": 2,
        "key-spacing": [2, { "afterColon": true }]
    }
}